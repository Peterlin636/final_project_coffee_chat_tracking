<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Consultants

    <a data-toggle="collapse" href="#company_consultants_new_form">
      Add consultant
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.consultants.each do |consultant| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to consultant, consultant %>

        <%= link_to consultant, method: :delete, data: { confirm: "Do you really want to delete this consultant" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_consultants_new_form">
        <%= render partial: "companies/company_consultants_new_form" %>
      </div>
    </div>

  </ul>
</div>
