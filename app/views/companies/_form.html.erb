<% was_validated = company.errors.any? %>

<%= form_with(model: company, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% industry_class = "form-control" %>
    <% industry_was_invalid = company.errors.include?(:industry) %>

    <% if was_validated %>
      <% if industry_was_invalid %>
        <% industry_class << " is-invalid" %>
      <% else %>
        <% industry_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :industry %>
    <%= f.text_field :industry, class: industry_class, placeholder: "Enter industry" %>
    <% if industry_was_invalid %>
      <% company.errors.full_messages_for(:industry).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% website_class = "form-control" %>
    <% website_was_invalid = company.errors.include?(:website) %>

    <% if was_validated %>
      <% if website_was_invalid %>
        <% website_class << " is-invalid" %>
      <% else %>
        <% website_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :website %>
    <%= f.text_field :website, class: website_class, placeholder: "Enter website" %>
    <% if website_was_invalid %>
      <% company.errors.full_messages_for(:website).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
