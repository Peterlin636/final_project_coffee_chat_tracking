<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Coffee Chats

    <a data-toggle="collapse" href="#consultant_coffee_chats_new_form">
      Add coffee chat
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @consultant.coffee_chats.each do |coffee_chat| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to coffee_chat, coffee_chat %>

        <%= link_to coffee_chat, method: :delete, data: { confirm: "Do you really want to delete this coffee_chat" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="consultant_coffee_chats_new_form">
        <%= render partial: "consultants/consultant_coffee_chats_new_form" %>
      </div>
    </div>

  </ul>
</div>
