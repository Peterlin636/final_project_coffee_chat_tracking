<div class="card mb-3">
  <h2 class="card-header h4">
    Consultant #<%= consultant.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Company</dt>
      <dd>
        <% if @consultant.company.present? %>
          <%= link_to consultant.company, consultant.company %>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= consultant.name %></dd>

      <dt>Title</dt>
      <dd><%= consultant.title %></dd>

      <dt>Office</dt>
      <dd><%= consultant.office %></dd>

      <dt>Email</dt>
      <dd><%= consultant.email %></dd>

      <dt>Phone number</dt>
      <dd><%= consultant.phone_number %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back consultant, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_consultant_url(consultant), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to consultant, method: :delete, data: { confirm: "Do you really want to delete this consultant?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(consultant.updated_at) %> ago
  </div>
</div>
