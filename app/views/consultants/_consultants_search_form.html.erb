          <div class="input-group-append" data-target='#coffee_chatslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#coffee_chatsgteqcreated_atPicker').datetimepicker({
